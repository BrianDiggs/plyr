---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title>Plyr</title>
  <link href="http://plyr.had.co.nz"/>
  <link type="application/atom+xml" rel="self"
    href="http://plyr.had.co.nz/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://plyr.had.co.nz/</id>
  <author>
    <name>Hadley Wickham</name>
    <email>h.wickham@gmail.com</email>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>http://plyr.had.co.nz/{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="http://plyr.had.co.nz{{ post.url }}"/>
    <title>{{ post.title }}</title>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>Hadley Wickham</name>
      <email>h.wickham@gmail.com</email>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
 
</feed>